<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Profile Picture using CircleImageView -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile_pic_placeholder"
        android:layout_marginTop="16dp"
        />

    <!-- Name Input -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        style="@style/EditTextStyle"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"/>

    <!-- Admission Number Input -->
    <EditText
        android:id="@+id/admissionNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextStyle"
        android:layout_below="@id/nameEditText"
        android:hint="Admission Number"
        android:inputType="number"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_below="@id/admissionNumberEditText"
        android:layout_marginTop="16dp">
        <AutoCompleteTextView
            android:id="@+id/location_dropdown"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:textColor="@color/edit_text_hint"
            android:text="Select Location"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/hostelId_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc"
        android:layout_alignStart="@+id/loc"
        android:layout_alignEnd="@+id/loc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-1dp"
        android:text="Insert hostel id for verification" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/hosteId"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/hostelId_text"
        android:layout_alignStart="@+id/loc"
        android:layout_alignEnd="@+id/loc"
        android:src="@drawable/profile_pic_placeholder"
        android:scaleType="fitCenter" />
    <EditText
        android:id="@+id/emailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextStyle"
        android:layout_below="@id/hosteId"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextStyle"
        android:layout_below="@id/emailId"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SignUp"
        style="@style/SolidButtonStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/solid_bg"
        android:text="SIgnUp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp" />

</RelativeLayout>
